<UserControl x:Class="HouseMouseCheese.FrameDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HouseMouseCheese"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition x:Name="FrameRowDefinition"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="NumberDisplay" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20" />
        <UniformGrid Grid.Row="1" Name="Dad"></UniformGrid>
    </Grid>
</UserControl>
