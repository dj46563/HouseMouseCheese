<Window x:Class="HouseMouseCheese.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:HouseMouseCheese"
        mc:Ignorable="d"
        Title="House Mouse: Cheese" Height="330" Width="621.5"
        MinHeight="330">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel>
            <xctk:ColorCanvas x:Name="ColorPicker" DockPanel.Dock="Right" Grid.Row="0" Grid.Column="1" SelectedColorChanged="ColorPicker_SelectedColorChanged" Width="234" Height="268" Margin="10"/>
            <local:FrameDisplay x:Name="FrameDisplay" Margin="10"/>
        </DockPanel>
        <!--<local:FramePanel Grid.Row="1" Grid.ColumnSpan="2" Margin="20"></local:FramePanel>-->
    </Grid>
</Window>
